{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "World Vaccination 2020",
    "width": 800,
    "height": 400,
    "projection": {
        "type": "equalEarth"
    },
    "layer": [
        {
            "data": {
                "sphere": true
            },
            "mark": {
                "type": "geoshape",
                "fill": "lightsteelblue"
            }
        },
        {
            "data": {
                "url": "https://raw.githubusercontent.com/monashjaffy2077/FIT3179_Studio_24/Data%20Visualization%202/data/ne_110m.json",
                "format": {
                    "type": "topojson",
                    "feature": "ne_110m_admin_0_countries"
                }
            },
            "transform": [
                {
                    "lookup": "properties.NAME",
                    "from": {
                        "data": {
                            "url": "https://raw.githubusercontent.com/monashjaffy2077/FIT3179_Studio_24/Data%20Visualization%202/data/world_vacc.csv"
                        },
                        "key": "Country",
                        "fields": [
                            "total_vaccinations",
                            "Population"
                        ]
                    }
                }
            ],
            "mark": {
                "type": "geoshape",
                "stroke": "lightsteelblue",
                "strokeWidth": 0.5
            },
            "encoding": {
                "color": {
                    "field": "total_vaccinations",
                    "title": "Total Vaccinations",
                    "type": "quantitative",
                    "scale": {
                        "type": "threshold",
                        "domain": [
                            5000000,
                            200000000,
                            500000000,
                            800000000
                        ],
                        "range": [
                            "#feedde",
                            "#fdbe85",
                            "#fd8d3c",
                            "#e6550d",
                            "#a63603"
                        ]
                    },
                    "legend": {
                        "format": "~s"
                    }
                },
                "tooltip": [
                    {
                        "field": "properties.NAME",
                        "type": "nominal",
                        "title": "Country"
                    },
                    {
                        "field": "total_vaccinations",
                        "type": "quantitative",
                        "title": "Total Vaccinations"
                    },
                    {
                        "field": "Population",
                        "type": "quantitative"
                    }
                ]
            }
        },
        {
            "data": {
                "url": "https://raw.githubusercontent.com/monashjaffy2077/FIT3179_Studio_24/Data%20Visualization%202/data/ne_110m.json",
                "format": {
                    "type": "topojson",
                    "feature": "ne_50m_graticules_30"
                }
            },
            "mark": {
                "type": "geoshape",
                "fill": null,
                "stroke": "Gainsboro"
            }
        }
    ]
}